<Window x:Class="SrtEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SrtEditor.UI.UserControls"
        mc:Ignorable="d"
        Title="SRT editor" Height="400" Width="600" Icon="/subtitle_15356348.png">
    <TabControl>
        <TabItem Header="Time Editor">
            <Frame Source="Pages/TimeEditor.xaml" />
        </TabItem>
        <TabItem Header="Name Editor">
            <Grid Margin="10"
                  AllowDrop="True"
                  PreviewDragOver="NameEditorPage_PreviewDragOver"
                  Drop="NameEditorPage_Drop">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--region folderbrowse-->
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                    <Label>Open folder:</Label>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 x:Name="FolderPath"
                                 AllowDrop="True"
                                 HorizontalAlignment="Stretch"/>
                        <Button Grid.Column="1"
                                HorizontalAlignment="Right"
                                Padding="10, 2, 10, 2"
                                Margin="5, 0, 0, 0"
                                Click="FolderBrowseButton_Click">Browse</Button>
                    </Grid>
                </StackPanel>
                <!--end folderbrowse-->

                <!--region operations-->
                <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label>Operations:</Label>
                            <StackPanel HorizontalAlignment="Center">
                                <CheckBox Content="Copy video names"
                                          x:Name="CopyCheckBox"
                                          IsChecked="True"/>
                                <CheckBox Content="Extend filename"
                                          x:Name="ExtendCheckBox"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    IsEnabled="{Binding ElementName=ExtendCheckBox, Path=IsChecked}">
                            <Label>Extend with:</Label>
                            <TextBox x:Name="Extension"
                                     Text=".hu"
                                     AllowDrop="True"
                                     Width="100"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <!--end operations2-->

                <!--region Preview-->
                <StackPanel Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                    <Label>Preview</Label>
                    <ListBox Height="100"
                             x:Name="PreviewListBox"/>
                </StackPanel>
                <!--end Preview-->

                <StackPanel Grid.Row="3"
                            Grid.Column="1"
                            VerticalAlignment="Center">
                    <Button x:Name="RenameButton"
                            Margin="10"
                            Padding="10" Click="RenameButton_Click">Rename files</Button>
                </StackPanel>

            </Grid>
        </TabItem>
        <TabItem Header="Settings">
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center">Coming soon</Label>
        </TabItem>
    </TabControl>
</Window>
